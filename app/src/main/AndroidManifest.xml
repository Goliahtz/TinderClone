<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serifhan.clover">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.serifhan.clover.MainActivity" />
        <activity android:name="com.serifhan.clover.ChooseLoginRegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.serifhan.clover.RegistrationActivity" />
        <activity android:name="com.serifhan.clover.LoginActivity" />
        <activity android:name="com.serifhan.clover.SettingsActivity" />
        <activity android:name="com.serifhan.clover.Matches.MatchesActivity" />
        <activity android:name="com.serifhan.clover.Chat.ChatActivity"></activity>
    </application>

</manifest>